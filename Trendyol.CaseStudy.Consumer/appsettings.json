{
  "BusConfigurations": {
    "HostName": "rabbitmq://localhost",
    "Username": "guest",
    "Password": "guest",
    "RequestTimeout": 20,
    "UseInMemoryScheduler": true,
    "ConsumeOnSpecifiedQueue": ["ordermail", "lostpasswordmail", "shipmentmail"],
    "CircuitBreaker": {
      "Enabled": true,
      "TripThreshold": 15,
      "ActiveThreshold": 10,
      "ResetInterval": 5
    },
    "RetryPolicy": {
      "Enabled": true,
      "RetryLimit": 5,
      "InitialInterval": 2,
      "IntervalIncrement": 5
    },
    "DelayedMessage": {
      "Enabled": false
    },
    "MessageScheduler": {
      "Enabled": true,
      "QuartzEndpoint": "quartz"
    },
    "RateLimit": {
      "Enabled": false,
      "Limit": null,
      "LimiterInterval": null
    }
  }
}